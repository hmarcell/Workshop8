<Window x:Class="Workshop8_Client.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workshop8_Client"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="333" Width="800">
    <StackPanel>
        <Label Background="LightGreen" Padding="10">Username</Label>
        <TextBox x:Name="tb_username" Padding="10"/>
        <Label Background="LightGreen" Padding="10">Password</Label>
        <PasswordBox x:Name="tb_password" Padding="10"/>
        <Label Background="LightGreen" Padding="10">Password again</Label>
        <PasswordBox x:Name="tb_password2" Padding="10"/>
        <Button Content="Register" Padding="10" Margin="10" Click="Button_Click" />
    </StackPanel>
</Window>
